# .env.example
# Copy this file to .env and fill in your credentials

# Crunchyroll credentials (REQUIRED)
CRUNCHYROLL_EMAIL=your_email@example.com
CRUNCHYROLL_PASSWORD=your_password

# AniList Authentication Code (REQUIRED)
# Get your auth code by visiting:
# https://anilist.co/api/v2/oauth/authorize?client_id=30142&response_type=code
#
# After authorizing, you'll get a code on the PIN page. Paste it below:
ANILIST_AUTH_CODE=your_auth_code_here

# FlareSolverr URL (OPTIONAL)
# Only needed if you're experiencing Cloudflare challenges
# Point to your existing FlareSolverr instance
# Examples:
#   FLARESOLVERR_URL=http://192.168.1.100:8191
#   FLARESOLVERR_URL=http://flaresolverr.local:8191
# Leave commented out if not using FlareSolverr
# FLARESOLVERR_URL=http://your-flaresolverr-host:8191

# Docker / Runtime Configuration
# These settings work for both direct Python execution and Docker containers

# Timezone (Docker only) - uses standard TZ database names
# Examples: America/New_York, America/Los_Angeles, Europe/London, Asia/Tokyo
# Default: America/New_York
# TZ=America/New_York

# Browser mode (default: true for headless)
HEADLESS=true

# Enable debug logging (useful for troubleshooting)
DEBUG=false

# Dry-run mode - preview changes without updating AniList
# Great for testing before making actual changes
DRY_RUN=false

# Pagination settings - maximum number of history pages to scrape
# Lower values = faster syncs, higher values = more comprehensive history
MAX_PAGES=10

# Docker-specific: Cron schedule for automatic syncs
# Default is daily at 2 AM. Format: "minute hour day month weekday"
# CRON_SCHEDULE=0 2 * * *
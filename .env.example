# .env.example
# Copy this file to .env and fill in your credentials

# Crunchyroll credentials (REQUIRED)
CRUNCHYROLL_EMAIL=your_email@example.com
CRUNCHYROLL_PASSWORD=your_password

# AniList OAuth credentials (REQUIRED)
# Create an app at https://anilist.co/settings/developer
ANILIST_CLIENT_ID=your_client_id
ANILIST_CLIENT_SECRET=your_client_secret

# FlareSolverr URL (OPTIONAL)
# Only needed if you're experiencing Cloudflare challenges
# Point to your existing FlareSolverr instance
# Examples:
#   FLARESOLVERR_URL=http://192.168.1.100:8191
#   FLARESOLVERR_URL=http://flaresolverr.local:8191
# Leave commented out if not using FlareSolverr
# FLARESOLVERR_URL=http://your-flaresolverr-host:8191

# Pagination settings
MAX_HISTORY_PAGES=10

# Development mode
DEV_MODE=false
HEADLESS=true

# Enable debug logging
DEBUG=false